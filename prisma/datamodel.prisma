type User {
  id: ID! @id
  name: String!
  email: String! @unique
  password: String!
  role: Role!
  status: UserStatus!
  createdAt: DateTime!
  updatedAt: DateTime!
  chatrooms: [ChatRoom]
    @relation(link: INLINE, name: "ChatRoomToUser", onDelete: CASCADE)
}

enum Role {
  USER
  ADMIN
}

enum UserStatus {
  ENABLE
  DISABLE
}

type ChatRoom {
  id: ID! @id
  name: String!
  owners: [User!]!
    @relation(link: INLINE, name: "OwnerToUser", onDelete: SET_NULL)
}
